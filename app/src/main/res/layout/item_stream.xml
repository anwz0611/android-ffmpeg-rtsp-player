<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#ffffff"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <!-- 流信息头部 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_stream_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="流 #1"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_stream_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="rtsp://example.com/stream"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/btn_remove_stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="10sp"
            android:padding="4dp" />

    </LinearLayout>

    <!-- 视频显示区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000000"
        android:layout_marginTop="8dp">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_stream_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="未连接"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </FrameLayout>

    <!-- 流控制按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_play_stream"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="播放"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_stop_stream"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_record_stream"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="录制"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="拍照"
            android:textSize="12sp"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- 流状态信息 -->
    <TextView
        android:id="@+id/tv_stream_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态: 无"
        android:textSize="10sp"
        android:layout_marginTop="4dp" />

</LinearLayout>